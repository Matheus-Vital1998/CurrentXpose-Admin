@model CurrentXpose_Admin.Entidades.Sindico

@{
    ViewData["Title"] = "Detalhes do Sindico";
}

<link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />

<h1 class="agenda-title">Detalhes do Sindico</h1>

<div class="container">
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.id</dd>

        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.nome</dd>

        <dt class="col-sm-2">Login</dt>
        <dd class="col-sm-10">@Model.login</dd>

        <dt class="col-sm-2">Senha</dt>
        <dd class="col-sm-10">@Model.senha</dd>

        <dt class="col-sm-2">Residencia</dt>
        <dd class="col-sm-10">@Model.condominio_id</dd>
    </dl>

    <div class="d-flex justify-content-start mt-2">
        <a class="btn btn-secondary btn-sm" asp-action="Lista" asp-controller="Sindico">Voltar</a>
    </div>
</div>