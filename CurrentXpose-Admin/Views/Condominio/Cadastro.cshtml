@model CurrentXpose_Admin.Entidades.Condominio

@{
    ViewData["Title"] = "Criar Compromisso";
}

<link rel="stylesheet" href="~/css/cadastro.css" asp-append-version="true" />

<h1 class="agenda-title">Cadastrar condominio</h1>

<div class="container">
    <form asp-action="Cadastro" asp-controller="Condominio" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="nome" class="control-label font-weight-bold">Nome</label>
            <input asp-for="nome" class="form-control" />
            <span asp-validation-for="nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success btn-sm btn-equal">Criar</button>
            <a class="btn btn-secondary btn-sm btn-equal" asp-action="Inicial" asp-controller="Login">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}