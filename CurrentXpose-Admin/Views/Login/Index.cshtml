@model CurrentXpose_Admin.Models.UsuarioViewModel;

@{
    ViewData["Title"] = "Tela Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css">
    <title>Login</title>
    <br />
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" id="errorMessage">
            <span>@TempData["ErrorMessage"]</span>
        </div>
    }
    <br />
    <p>Sistema utilizado por administradores, para adicionar condominios, predios, moradores e sindicos.</p>
</head>
<body class="login-bg">
    <div class="login-container">
        <form class="login-form" method="post" asp-action="Login" asp-controller="Login">
            <h1>Login</h1>
            <label for="username">Username:</label>
            <input type="text" asp-for="login" id="username" required>
            <label for="password">Password:</label>
            <input type="password" asp-for="senha" id="password" required>
            <button type="submit">Login</button>
        </form>
    </div>
</body>
</html>

<script>
    function fecharMensagemErro() {
        var mensagemErro = document.getElementById('errorMessage');
        if (mensagemErro) {
            mensagemErro.style.display = 'none';
        }
    }

    setTimeout(fecharMensagemErro, 5000);

    document.addEventListener('click', function () {
        fecharMensagemErro();
    });
</script>