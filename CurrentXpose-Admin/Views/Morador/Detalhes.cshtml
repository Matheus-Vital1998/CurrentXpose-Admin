@model CurrentXpose_Admin.Entidades.Morador

@{
    ViewData["Title"] = "Detalhes do morador";
}

<link rel="stylesheet" href="~/css/detalhes.css" asp-append-version="true" />

<h1 class="agenda-title">Detalhes do Condomínio</h1>

<div class="container">
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.id</dd>

        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.nome</dd>

        <dt class="col-sm-2">Login</dt>
        <dd class="col-sm-10">@Model.login</dd>

        <dt class="col-sm-2">Senha</dt>
        <dd class="col-sm-10">@Model.senha</dd>

        <dt class="col-sm-2">Residencia</dt>
        <dd class="col-sm-10">@Model.residencia?.id</dd>

        <dt class="col-sm-2">Pergunta</dt>
        <dd class="col-sm-10">@Model.pergunta</dd>

        <dt class="col-sm-2">Resposta</dt>
        <dd class="col-sm-10">@Model.resposta</dd>
    </dl>

    <div class="d-flex justify-content-start mt-2">
        <a class="btn btn-secondary btn-sm btn-equal" asp-controller="Morador" asp-action="Lista">Voltar</a>
    </div>
</div>